    <select id="getListData" resultType="HashMap" parameterType="HashMap">
        select name,sum(sampling_total)sampling_total,sum(detection_total)detection_total,sum(masculine_total)masculine_total from (
        select bct.sampling_total,bct.detection_total,bct.masculine_total,bct.crowd_id,bc.name
        from bs_crowd_total bct
        left join bs_crowd_type bc on bc.kid = bct.crowd_type_id
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="province_id != null">
                AND bct.province_id = #{province_id}
            </if>
            <if test="city_id != null">
