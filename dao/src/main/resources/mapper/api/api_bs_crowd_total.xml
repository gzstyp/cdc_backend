            </if>
            <if test="crowd_date != null">
                AND bct.crowd_date = #{crowd_date}
            </if>
        </trim>
        ) lt group by crowd_id,name
    </select>

    <select id="getListType" resultType="HashMap" parameterType="HashMap">
